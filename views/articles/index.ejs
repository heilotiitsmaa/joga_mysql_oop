<!-- views/articles/index.ejs -->
<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>KÃµik artiklid</h1>
  <a href="/articles/new" class="btn btn-primary">Lisa uus artikkel</a>
</div>

<div class="row">
  <% articles.forEach(article => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <img src="/images/<%= article.image %>" class="card-img-top" alt="<%= article.name %>" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= article.name %></h5>
          <p class="card-text flex-grow-1"><%= article.body.substring(0, 100) %>...</p>
          <div>
            <a href="/articles/<%= article.slug %>" class="btn btn-secondary btn-sm me-2">Loe rohkem</a>
            <a href="/articles/<%= article.id %>/edit" class="btn btn-warning btn-sm me-2">Muuda</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Kas oled kindel?')">Kustuta</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>